@model Innovation_Library.Models.Room
@{
    ViewBag.Title = "New Room";
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.PageName = "New Room";
}

<div class="room-form">
    @using (Html.BeginForm("NewRoom", "Rooms", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <p>Add New Book</p>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label class="label">Room Name</label>
                    <input name="RoomName" class="form-control" type="text" placeholder="Room 111" />
                </div>
                <div class="form-group mb-3">
                    <label class="label">Capacity</label>
                    <input name="Capacity" class="form-control" type="number" placeholder="10" />
                </div>
                <div class="form-group mb-3">
                    <label class="label">Table Desk</label>
                    <input name="TableDesk" class="form-control" type="number" placeholder="5" />
                </div>
                <div class="form-group mb-3">
                    <label class="label">Whiteboard</label>
                    <input name="Whiteboard" class="form-control" type="number" placeholder="5" />
                </div>
                <div class="form-group mb-3">
                    <label class="label">Projector</label>
                    <input name="Projector" class="form-control" type="number" placeholder="10" />
                </div>

                <div class="form-group mb-2">
                    <label class="label">Room Image</label>
                    <input name="ImageFile" class="form-control image-File text-black" type="file" />
                </div>
                <div class="form-group mb-2">
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                        Save Room
                    </button>
                </div>
            </div>
        </div>
    }
</div>



