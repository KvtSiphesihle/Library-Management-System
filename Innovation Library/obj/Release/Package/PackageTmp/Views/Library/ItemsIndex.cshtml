@model IEnumerable<Innovation_Library.Models.HireItems>
@{
    ViewBag.Title = "ItemsIndex";
    Layout = "~/Views/Shared/_RoomsLayout.cshtml";
}

<div class="items-hire mont">
    <h5 class="mt-3"><b>Hire</b> Our Items</h5>
    <p>You can hire up to <b>3 item(s)</b> for max of <b>5 days</b>.</p>
    <div>
        <p class="alert rounded-1 alert-danger d-flex justify-content-between align-items-center p-1 px-3">
            All damages recognized during items inspections will billed on your account.
            <i class="fa fas fa-exclamation-triangle"></i>
        </p>
    </div>
    <div class="hire-items-list">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-12 col-sm-6 mb-3">
                    <div class="room-card w-100">
                        <div class="room-image p-3">
                            <img src="/@item.Image" alt="Alternate Text" />
                        </div>
                        <div class="room-content">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="p-0 m-0">@item.ItemName</h5>
                            </div>
                            <p class="my-1"><b>R @item.ItemPrice</b> per day</p>
                            <div class="pt-4">
                                @using(Html.BeginForm("TermsConditions", "Hiring", FormMethod.Post, new { role="form"}))
                                {
                                    <input type="hidden" name="id" value="@item.ItemId" />
                                    <button type="submit" class="room-btn hire-btn w-100">Hire Item</button>
	                            }
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--Item 2-->
        </div>
    </div>
</div>

