@model Innovation_Library.Models.Hiring
@{
    ViewBag.Title = "HireItem";
    Layout = "~/Views/Shared/_RoomsLayout.cshtml";
}

<p class="my-2">Hire Item Details</p>
<div class="hire-item-details p-2">
    <div class="row align-items-center">
        <div class="col-md-3">
            <div class="hire-item-details-image">
                <img src="/@ViewBag.Image" alt="">
            </div>
        </div>
        <div class="col-md-9">
            <p class="bg-dark py-2 px-4 rounded-1 text-white">Hire Information</p>
            <div class="row">
                <div class="col-6"><b>Item Name</b></div>
                <div class="col-6"><span class="item-detail-value">@ViewBag.ItemName</span></div>
            </div>
            <div class="row mt-3">
                <div class="col-6"><b>Price(Per Day)</b></div>
                <div class="col-6"><span class="item-detail-value">R @ViewBag.Price</span></div>
            </div>
            <div class="row mt-3">
                <div class="col-6"><b>No Of Day(s)</b></div>
                <div class="col-6"><span class="item-detail-value">@Model.NoOfDays</span></div>
            </div>
            <div class="row mt-3">
                <div class="col-6"><b>Expected Return Date</b></div>
                <div class="col-6"><span class="item-detail-value">@Model.ExpectedReturn</span></div>
            </div>
            <div class="row mt-3">
                <div class="col-6"><b>Total Price Amount</b></div>
                <div class="col-6"><span class="item-detail-value"> R @Model.HireTotalAmount</span></div>
            </div>
            <hr>
            <div class="d-flex">
                @using (Html.BeginForm("ConfirmItemHire", "Hiring", FormMethod.Post))
                {
                    <input type="hidden" name="HireId" value="@Model.HiringId" />

                    <button type="submit" class="inno-btn bg-dark text-white" style="box-shadow: none;">
                        Confirm Item
                        Hire
                    </button>
                }
                <div class="mx-4">
                    @*@using (Html.BeginForm("CancelItemHire", "Hiring", FormMethod.Post))
                    {
                        <input type="hidden" name="id" value="@ViewBag.HiringId." />

                    }*@
                    <button type="submit" class="inno-btn bg-danger text-white" style="box-shadow: none;">
                        Cancel Item
                        Hire
                    </button>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>

