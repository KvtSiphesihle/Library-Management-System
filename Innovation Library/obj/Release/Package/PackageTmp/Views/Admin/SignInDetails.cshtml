@model Innovation_Library.Models.LibrarySignIn
@{
    /**/

    ViewBag.Title = "SignInDetails";
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.PageName = "Sign in success";
}

<h5>Sign In Details</h5>
<hr />
<div class="mt-2">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <p>Status</p>
                </div>
                <div class="col-md-4">
                    <p> : <span class="@(Convert.ToBoolean(Session["IsTimeOut"]) == true ? "text-danger" : "text-success")">@Session["status"]</span></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>Student Name</p>
                </div>
                <div class="col-md-4">
                    <p> : @Model.Name</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>Email</p>
                </div>
                <div class="col-md-4">
                    <p> : @Model.StudentEmail</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <p>Time in</p>
                </div>
                <div class="col-md-4">
                    <p> : @Model.SignInTime</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>Time out</p>
                </div>
                <div class="col-md-4">
                    <p> : @Model.SignOutTime</p>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<p class="bg-dark text-white rounded-1 px-3 py-2">@(ViewBag.Ongoing != null ? ViewBag.Ongoing : Model.Name + ", has signed in.")</p>
<hr />
@{
    if (Convert.ToBoolean(Session["IsTimeOut"]) == false)
    {
        <p class="text-success">This record was added to Library Sign Ins</p>
    }
}
<button class="btn btn-success mt-2">Generate Report</button>