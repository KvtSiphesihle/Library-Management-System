@model Innovation_Library.Models.Shelves
@{
    ViewBag.Title = "AddShelf";
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.PageName = "New Shelve";
}


<div class="room-form">
    @using (Html.BeginForm("AddShelf", "Shelves", FormMethod.Post))
    {
        <p>Add New Shelf</p>
        <div class="row">
            <p class="text-danger">@ViewBag.Error</p>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label class="form-label">Shelf No</label>
                    <input type="number" name="ShelfNo" class="form-control py-2" placeholder="Shelf Number" />
                    <div>
                        @Html.ValidationMessageFor(m => m.ShelfNo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mb-2">
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                        Save Shelf
                    </button>
                </div>
            </div>
        </div>
    }
</div>

