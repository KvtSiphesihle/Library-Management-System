@model Innovation_Library.Models.Event
@{
    ViewBag.Title = "HostEvent";
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.PageName = "Host Event";
}

@using (Html.BeginForm("HostEvent", "Event", FormMethod.Post))
{
    <div class="col-md-6 mb-4">
        <div class="form-group">
            <label>Title</label>
            @Html.TextBoxFor(m => m.Title, new { @placeholder = "Title", @class = "form-control" })
        </div>
        <div class="form-group mt-2">
            <label>Description</label>
            @Html.TextAreaFor(m => m.Description, new { @placeholder = "Description", @class = "form-control" })
        </div>
        <div class="form-group mt-2">
            <label>Full Date</label>
            <input type="datetime-local" class="form-control" name="FullDate" />
        </div>
        <div class="form-group mt-2">
            <label>Location</label>
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control", @placeholder="Location" })
        </div>
        <div class="form-group mt-2">
            <label>Number Of Seats</label>
            <input type="number" class="form-control" name="NumberOfSeats" placeholder="Number Of Seats" />
        </div>
        <div class="mt-2">
            <button type="submit" class="btn btn-primary">Save event details</button>
        </div>
    </div>
}

