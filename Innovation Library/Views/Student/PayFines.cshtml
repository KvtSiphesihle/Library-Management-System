@model Innovation_Library.Models.Borrower
@{
    ViewBag.Title = "Pay Fines";
    Layout = "~/Views/Shared/_Student.cshtml";
}

<div class="student-dash-title">
    <h6>Library Payments</h6>
</div>
<p class="text-danger mt-2"><b>Note:</b> You have been charged for late return.</p>
<p class="my-4 mx-0">Pay fines for late book return <span class="text-danger">(Required *)</span>.</p>
<div class="book-fines-details">
    <p class="text-white bg-dark p-2 rounded-1 mb-1">Book Details</p>
    <div class="row">
        <div class="col-md-6 py-3">
            <div class="row">
                <div class="col-6">Book Title</div>
                <div class="col-6"><b>@Model.BookTitle</b></div>
            </div>
            <div class="row">
                <div class="col-6">Book Author</div>
                <div class="col-6"><b>@Model.Author</b></div>
            </div>
            <div class="row">
                <div class="col-6">Book ISBN</div>
                <div class="col-6"><b>@Model.ISBN</b></div>
            </div>
        </div>
        <div class="col-md-6 mt-2 mt-md-0">
            <p class="text-white bg-secondary p-2 rounded-1 mb-1">Payment Info.</p>
            <div class="row">
                <div class="col-6">Total Fine Amount</div>
                <div class="col-6"> R <b>@ViewBag.TotalFineAmount, 00</b></div>
            </div>
            <hr class="col-primary">
            <div class="my-2">
                @{
                    double TotalAmt = ViewBag.TotalFineAmount;
                    string url = "https://www.sandbox.paypal.com/cgi-bin/webscr?cmd=_xclick&amount=" + (TotalAmt / 15.55) + "&business=carltechnologies@gmail.com&item_name=LateFines&return=https://2023group37.azurewebsites.net/Payment/Index";
                }
                <a class="student-btn stu-btn-primary" href="@url">
                    Finalize Payment <i class="fa fa-dollar-sign"></i>
                </a>
            </div>
        </div>
    </div>
</div>

