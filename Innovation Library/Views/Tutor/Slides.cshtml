@model IEnumerable<Innovation_Library.Models.Slides>
@{
    ViewBag.Title = "Slides";
    Layout = "~/Views/Shared/_Student.cshtml";
}

<div class="student-dash-title">
    <h6>Learning Materials</h6>
</div>
<p class="my-4 mx-0">Find and download all the slides you need...</p>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-3">
                <div class="slide-card">
                    <p class="py-2 bg-secondary text-light m-0 px-3">@item.SlideTitle</p>
                    <div class="card-icon">
                        <i class="fa fa-file-archive icon"></i>
                    </div>
                    <a class="btn btn-primary" href="@item.SlideUrl" target="_blank">Download <i class="fa fa-download"></i></a>
                </div>
            </div>
        </div>
    }
}

