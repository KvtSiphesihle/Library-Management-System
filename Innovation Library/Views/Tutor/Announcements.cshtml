@model IEnumerable<Innovation_Library.Models.Announcement>
@{
    ViewBag.Title = "Announcements";
    Layout = "~/Views/Shared/_Student.cshtml";
}

<div class="student-dash-title">
    <h6>Announcements</h6>
</div>
<p class="my-4 mx-0">Find all posted announcements here...</p>
<div class="announcements__section">
    @foreach (var item in Model)
    {
        <div class="announcement__card">
            <div class="announcement__header">
                <p class="m-0"><b>@item.AnnouncementTitle</b></p>
                <small class="m-0">Posted on @item.PostedDate</small>
            </div>
            <hr>
            <div class="announcement__body">
                <p>@item.AnnouncementText</p>
            </div>
            <div class="announcement__action">
                <div class="my-2">
                    <a href="@Url.Action("AnnouncementDetails", "Tutor", new {id=item.AnnouncementId})" class="student-btn stu-btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
            

