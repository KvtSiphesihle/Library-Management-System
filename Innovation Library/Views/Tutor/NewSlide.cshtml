
@{
    ViewBag.Title = "NewSlide";
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.PageName = "New Doc";
}

<div class="col-md-6">
    @using (Html.BeginForm("NewSlide", "Tutor", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <p class="m-0">Upload only a pdf file.</p>
        </div>
        <div class="form-group mt-2">
            <label>Slide Title</label>
            <input type="text" name="SlideTitle" placeholder="Slide Title" class="form-control" />
        </div>
        <div class="form-group">
            <label>Slide file</label>
            <input type="file" name="SlideFile" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <button class="btn btn-primary" type="submit">Save Slide</button>
        </div>
    }
</div>


