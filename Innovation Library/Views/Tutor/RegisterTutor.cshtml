@model Innovation_Library.Models.Tutor
@{
    ViewBag.Title = "RegisterTutor";
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.PageName = "Register Tutor";
}

<div class="col-md-5">
    @using (Html.BeginForm("RegisterTutor", "Tutor", FormMethod.Post, new { role = "form" }))
    {
        <div class="form-group">
            <label>Email Address</label>
            @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", @placeholder = "tutor@innovation.com" })
        </div>
        <div class="form-group mt-3">
            <label>Name</label>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Tutor" })
        </div>
        <div class="form-group mt-3">
            <label>Phone Number</label>
            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @placeholder = "000 0000 000" })
        </div>
        <button class="btn btn-dark mt-2" type="submit">Register Tutor</button>
    }
</div>

