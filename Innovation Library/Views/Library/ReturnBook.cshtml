@model Innovation_Library.Models.Borrower
@{
    ViewBag.Title = "ReturnBook";
    Layout = "~/Views/Shared/_Student.cshtml";
}

<div class="student-dash-title">
    <h6>Library Return Confirmation</h6>
</div>
<p class="my-4 mx-0">Return book to the library.</p>
<div class="book-fines-details">
    <p class="text-white bg-dark p-2 rounded-1 mb-1">Book Details</p>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-6">Book Title</div>
                <div class="col-6"><b>@Model.BookTitle</b></div>
            </div>
            <div class="row">
                <div class="col-6">Book Author</div>
                <div class="col-6"><b>@Model.Author</b></div>
            </div>
            <div class="row">
                <div class="col-6">Book ISBN</div>
                <div class="col-6"><b>@Model.ISBN</b></div>
            </div>
            <hr class="col-primary">
            <div class="my-2">
                @using (Html.BeginForm("ReturnBook", "Library", FormMethod.Post, new { role = "form" }))
                {
                    <input type="hidden" name="BorrowerId" value="@Model.BorrowerId" />
                    <input type="hidden" name="BookId" value="@Model.AllocatedBookId" />
                    <button type="submit" class="student-btn stu-btn-primary">Confirm Return</button>
                }
            </div>
        </div>
        <div class="col-md-6 mt-2 mt-md-0">
            <p class="text-white bg-secondary p-2 rounded-1 mb-1">Student Info.</p>
            <div class="row">
                <div class="col-6">Student Name</div>
                <div class="col-6"><b>@Model.StudentName</b></div>
            </div>
            <div class="row">
                <div class="col-6">Email</div>
                <div class="col-6"><b>@Model.Email</b></div>
            </div>
            <div class="row">
                <div class="col-6">Contact No</div>
                <div class="col-6"><b>@Model.ContactNo</b></div>
            </div>

        </div>
    </div>
</div>

