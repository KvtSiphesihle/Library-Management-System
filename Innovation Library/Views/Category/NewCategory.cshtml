@model Innovation_Library.Models.Category
@{
    ViewBag.Title = "NewCategory";
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.PageName = "New Category";
}

<div class="room-form">
    @using (Html.BeginForm("NewCategory", "Category", FormMethod.Post))
    {
        <p>Add New Category</p>
        <div class="row">
            <p class="text-danger">@ViewBag.Error</p>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label class="label">Category Name</label>
                    <input name="CategoryName" class="form-control" type="text" placeholder="Programming" />
                </div>
                <div class="form-group mb-2">
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                        Save Category
                    </button>
                </div>
            </div>
        </div>
    }
</div>

