
@{
    ViewBag.Title = "MyExchanges";
    Layout = "~/Views/Shared/_Student.cshtml";
}

<div class="student-dash-title">
    <h6>My Orders</h6>
</div>
<p class="my-4 mx-0">These are all <b>completed & incomplete</b> orders at a moment.</p>
<table id="recent-borrows" class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Exchange Key</th>
            <th>Exchange Time</th>
            <th>Status</th>
            <th>Amount Due</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ExchangeId</td>
                <td>@item.ExchangeKey</td>
                <td>@item.ExchangeTime</td>
                <td>@item.Status</td>
                <td>R @item.AmountDue</td>
                <td>R @item.Order.Address</td>
                <td>
                    <div class="d-flex">
                        @if (!item.IsCollected)
                        {
                            /**/
                            <a href="@Url.Action("ConfirmCollection", "OrderManagement", new { id=item.ExchangeId})" class="btn btn-primary">Confirm Collection</a>
                        }else
                        {
                            <button class="btn btn-primary" disabled>Confirm Collection</button>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



