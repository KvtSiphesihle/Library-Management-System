
@{
    ViewBag.Title = "Refund";
    Layout = "~/Views/Shared/_Student.cshtml";
}

<div class="student-dash-title">
    <h6>Refund Request</h6>
</div>

<div class="bg-light mt-2 py-4 px-4">
    <h4><i class="fa fa-check-circle text-success"></i><span class="mx-1"></span>Request Success</h4>
    <p>Your refund request will be processed very soon, stay alert on your emails for the next step.</p>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>Account Holder Name</label>
            <input type="text" class="form-control" name="AccountHolderName" />
        </div>
        <div class="form-group">
            <label>Account Number</label>
            <input type="text" class="form-control" name="AccountNumber" />
        </div>
        <button class="btn btn-secondary mt-1" type="submit">Submit Data</button>
    }
</div>
