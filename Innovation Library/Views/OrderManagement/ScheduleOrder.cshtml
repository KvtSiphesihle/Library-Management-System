@model IEnumerable<Innovation_Library.Models.Order>
@{
    ViewBag.Title = "ScheduleOrder";
    Layout = "~/Views/Shared/_Student.cshtml";
}

<div class="student-dash-title">
    <h6>Order Scheduling</h6>
</div>
<div class="row my-2">
    @using (Html.BeginForm("ScheduleOrder", "OrderManagement", FormMethod.Post))
    {
        <div class="form-group">
            <label>Select Order Number</label>
            <select class="form-control" name="OrderNumber">
                @foreach (var item in Model)
                {
                    <option class="form-control" value="@item.OrderNo">@item.OrderNo</option>
                }
            </select>
        </div>
        <div class="form-group mt-1">
            <label>Select Delay Days</label>
            <select class="form-control" name="Days">
                <option value="1">1 Minute</option>
                <option value="2">2 Minutes</option>
                <option value="3">3 Minutes</option>
            </select>
        </div>
        <button type="submit" class="btn btn-dark mt-2">Confirm Schedule</button>
    }
</div>
